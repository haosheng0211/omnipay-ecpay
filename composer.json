{
    "name": "omnipay-taiwan/ecpay",
    "description": "ECPay driver for the Omnipay payment processing library",
    "keywords": [
        "omnipay",
        "ecpay"
    ],
    "homepage": "https://github.com/omnipay-taiwan/omnipay-ecpay",
    "license": "MIT",
    "authors": [
        {
            "name": "recca0120",
            "email": "recca0120@gmail.com"
        }
    ],
    "require": {
        "omnipay/common": "^3.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "omnipay/tests": "^3.0",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "classmap": [
            "lib/ECPayAIO_PHP/AioSDK/sdk",
            "lib/ECPayAIO_PHP/ApplePaySDK/sdk",
            "lib/ECPayAIO_PHP/EInvoiceSDK/sdk",
            "lib/ECPayAIO_PHP/PayLogisticSDK/sdk"
        ],
        "psr-4": {
            "Omnipay\\ECPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\ECPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
